<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sailors"
    tools:context="org.nthree.happybirthday.MainActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_marginRight="8dp"

        android:text="Happy Birthday Kendall!"
        android:textSize="22dp"
        android:textStyle="italic"
        android:textColor="#FFFF00"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8sp"
        android:paddingTop= "50sp"

        android:text="I don't need to tell you that you always have a shoulder to cry on and a back to lean on in your time of need or when you're simply feeling down, right?\n On your special day today, I want to remind you that I am always there for you as you were always there for me. I am grateful to have you in my life and I thank you for helping me find my courage that I once lost in myself.\nIn the name of the moon, have an awesome birthday you Sailor Star!"
        android:textSize="16dp"
        android:textColor="#FFFF00"
        />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:text="Love,\n  Nolan Becerra"
        android:textSize="22dp"
        android:textColor="#FFFF00"
        />



</RelativeLayout>
